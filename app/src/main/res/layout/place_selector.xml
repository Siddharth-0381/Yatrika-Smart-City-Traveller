<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="LoginProcess.PlaceSelector"
    android:layout_margin="10dp"
    android:background="@drawable/takemeaway_walpaper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/simple_back_icon"
            app:tint="@color/black"
            android:onClick="openCitySelector"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:text="Please select Your Favourite Spot!"
            android:textSize="20dp"
            android:gravity="center"
            android:fontFamily="@font/amaranth"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/historical_butn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="HISTORICALS"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:fontFamily="@font/amaranth"
                android:layout_margin="5dp"
                android:background="@drawable/historical"/>

            <Button
                android:id="@+id/temple_butn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="TEMPLES"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:fontFamily="@font/amaranth"
                android:layout_margin="5dp"
                android:background="@drawable/temple"/>

            <Button
                android:id="@+id/waterPark_butn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="AMUSEMENT Parks and Malls"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:fontFamily="@font/amaranth"
                android:layout_margin="5dp"
                android:background="@drawable/amusmentparks"/>


        </LinearLayout>

    </LinearLayout>

</ScrollView>